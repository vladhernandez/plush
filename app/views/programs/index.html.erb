<h1>Listing programs</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Mailing address</th>
    <th>Mailing address 2</th>
    <th>Shipping address</th>
    <th>Shipping address 2</th>
    <th>Phone number</th>
    <th>Email address</th>
    <th>Wedding date</th>
    <th>Brides name</th>
    <th>Grooms name</th>
    <th>Design contact number</th>
    <th>Design name</th>
    <th>Quantity</th>
    <th>Ordered sample</th>
    <th>Sample number</th>
    <th>Text paper</th>
    <th>Text paper layer 2</th>
    <th>Text paper layer 3</th>
    <th>Text paper layer 4</th>
    <th>Font color</th>
    <th>Ribbon color</th>
    <th>Special requests</th>
    <th>Program text</th>
  </tr>

<% for program in @programs %>
  <tr>
    <td><%=h program.name %></td>
    <td><%=h program.mailing_address %></td>
    <td><%=h program.mailing_address_2 %></td>
    <td><%=h program.shipping_address %></td>
    <td><%=h program.shipping_address_2 %></td>
    <td><%=h program.phone_number %></td>
    <td><%=h program.email_address %></td>
    <td><%=h program.wedding_date %></td>
    <td><%=h program.brides_name %></td>
    <td><%=h program.grooms_name %></td>
    <td><%=h program.design_contact_number %></td>
    <td><%=h program.design_name %></td>
    <td><%=h program.quantity %></td>
    <td><%=h program.ordered_sample %></td>
    <td><%=h program.sample_number %></td>
    <td><%=h program.text_paper %></td>
    <td><%=h program.text_paper_layer_2 %></td>
    <td><%=h program.text_paper_layer_3 %></td>
    <td><%=h program.text_paper_layer_4 %></td>
    <td><%=h program.font_color %></td>
    <td><%=h program.ribbon_color %></td>
    <td><%=h program.special_requests %></td>
    <td><%=h program.program_text %></td>
    <td><%= link_to 'Show', program %></td>
    <td><%= link_to 'Edit', edit_program_path(program) %></td>
    <td><%= link_to 'Destroy', program, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

