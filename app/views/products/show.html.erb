<div id="sleeve">
<div id="product-detail">
	<div class="column product-image">

		<%- 
		large = @product.images.large.first.file.url unless @product.images.large.empty?
    xlarge = @product.images.xlarge.first.file.url unless @product.images.xlarge.empty?
    if large and xlarge
       -%>
       <%= link_to image_tag(large), xlarge, :class => 'lightbox'  %>
    <% end %>
	</div>
	<div class="column product-contents">
		<h2><%= @product.title %></h2>
		<hr class="dotted" />
		<%= markdown @product.description %>
		<% @product.images.large.each_with_index do |image, i| %>
	  	<%= link_to i+1, image.file.url, :class => 'large_image_link' %>
		<% end %><br>
		<hr class="dotted" />
		<button class="sample"><span>Request a Sample</span></button><button class="order"><span>Order Form</span></button>
	</div>
	<div class="clear"></div>
	<%= link_to 'Edit', edit_product_path(@product) %> |
	<%= link_to 'Back', products_path %>
</div>
</div>